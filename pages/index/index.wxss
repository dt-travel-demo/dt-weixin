view {
  box-sizing: border-box;
}
#box {
  width: 100%;
  padding: 100rpx 48rpx 104rpx;
}
#box .title {
  width: 100%;
  margin-bottom: 16rpx;
}
#box .title .dw {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
#box .title .dw > image {
  width: 16rpx;
  height: 22rpx;
  margin-right: 6rpx;
}
#box .title .dw > ._h1 {
  font-size: 32rpx;
  font-weight: 400;
  color: #121212;
}
#box .title > ._h1 {
  font-size: 48rpx;
  font-weight: 400;
  color: #121212;
  margin-bottom: 16rpx;
}
#box .title .search {
  width: 100%;
}
#box .title .search > input {
  width: 654rpx;
  height: 96rpx;
  background: #ffffff;
  border: 2rpx solid #e7eaf0;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #aaaaaa;
  padding-left: 16rpx;
}
#box .title .search .recommend {
  width: 100%;
  margin-top: 18rpx;
}
#box .title .search .recommend .r-h {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6rpx;
}
#box .title .search .recommend .r-h view {
  width: 178rpx;
  border-bottom: 4rpx solid #a6a6a6;
}
#box .title .search .recommend .r-h ._h1 {
  font-size: 24rpx;
  font-weight: 700;
  color: #a6a6a6;
}
#box .title .search .recommend .r-n-hide {
  height: 50rpx;
  overflow: hidden;
}
#box .title .search .recommend .r-n-hide .r-n {
  width: 100%;
  padding-bottom: 14rpx;
  display: flex;
  overflow: auto;
}
#box .title .search .recommend .r-n-hide .r-n view {
  margin-right: 24rpx;
  border-radius: 40rpx;
  border: 2rpx solid #e5e5e5;
  white-space: nowrap;
  padding: 8rpx 14rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #a6a6a6;
}
#box .nav {
  width: 654rpx;
  height: 328rpx;
  border-radius: 20rpx;
  border: 10rpx solid #e5e5e5;
  box-shadow: inset -2rpx 0rpx 12rpx 12rpx #e5e5e5;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
#box .nav .n-box {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}
#box .nav .n-box image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 4rpx;
}
#box .nav .n-box ._h1 {
  font-size: 20rpx;
  font-weight: 400;
  color: #000000;
}
#box .lass {
  width: 100%;
  margin-bottom: 48rpx;
}
#box .lass .l-nav-hide {
  height: 80rpx;
  overflow: hidden;
  margin-bottom: 48rpx;
}
#box .lass .l-nav-hide .l-nav {
  overflow: auto;
  display: flex;
  padding-bottom: 20rpx;
}
#box .lass .l-nav-hide .l-nav view {
  white-space: nowrap;
  padding: 20rpx 40rpx;
  color: #aaaaaa;
  font-size: 28rpx;
  font-weight: 400;
  border-radius: 40rpx;
  margin-right: 24rpx;
}
#box .lass .l-nav-hide .l-nav .cl {
  background: #0069ef;
  color: #ffffff;
}
#box .lass .l-img-hide {
  height: 464rpx;
  overflow: hidden;
}
#box .lass .l-img-hide .l-img-box {
  display: flex;
  overflow: auto;
  padding-bottom: 16rpx;
}
#box .lass .l-img-hide .l-img-box .l-img {
  display: flex;
  flex-direction: column;
  width: 500rpx;
  height: 464rpx;
  background: #ffffff;
  box-shadow: 20rpx 48rpx 108rpx 0px rgba(0, 0, 0, 0.04);
  margin-right: 32rpx;
  padding: 16rpx 16rpx 0;
  border-radius: 40rpx;
}
#box .lass .l-img-hide .l-img-box .l-img image {
  width: 468rpx;
  height: 300rpx;
  margin-bottom: 28rpx;
}
#box .lass .l-img-hide .l-img-box .l-img ._h1 {
  margin-left: 40rpx;
}
#box .lass .l-img-hide .l-img-box .l-img ._h1:nth-child(2) {
  font-size: 32rpx;
  font-weight: 400;
  color: #121212;
  margin-bottom: 10rpx;
}
#box .lass .l-img-hide .l-img-box .l-img ._h1:last-child {
  font-size: 28rpx;
  font-weight: 400;
  color: #aaaaaa;
}
#box .jd {
  width: 100%;
}
#box .jd .j-title {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
#box .jd .j-title ._h1 {
  font-size: 32rpx;
  font-weight: 400;
  color: #121212;
}
#box .jd .j-title image {
  width: 8rpx;
  height: 36rpx;
}
#box .jd .j-box {
  display: flex;
  align-items: center;
  width: 654rpx;
  height: 160rpx;
  background: #ffffff;
  border: 4rpx solid #e7eaf0;
  border-radius: 30rpx;
  margin-top: 26rpx;
}
#box .jd .j-box image {
  margin: 0 32rpx 0 36rpx;
  width: 120rpx;
  height: 120rpx;
}
#box .jd .j-box .txt {
  margin-right: 120rpx;
}
#box .jd .j-box .txt ._h1:first-child {
  font-size: 28rpx;
  font-weight: 400;
  color: #121212;
  margin-bottom: 10rpx;
}
#box .jd .j-box .txt ._h1:last-child {
  font-size: 24rpx;
  font-weight: 400;
  color: #aaaaaa;
}
#box .jd .j-box view:last-child {
  font-size: 32rpx;
  font-weight: 400;
  color: #0069ef;
  display: flex;
  align-items: center;
}
#box .jd .j-box view:last-child ._h1 {
  margin-top: 18rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #aaaaaa;
}

